console.log(data);
---

<article class={data.slug}>
  <div class="cardheader">
    <div class="flex">
      <img class="can" src={`/img/products/${data.img}.webp`} alt="Beer Can" />
      <div>
        <h3 class={data.slug}>{data.name}</h3>
        <p class={data.slug}>{data.type}</p>
      </div>
    </div>
    <div class="barbox">
      <span class={`bar bar1 ${data.slug}`}></span>
      <span class={`bar bar2 ${data.slug}`}></span>
    </div>
  </div>
  <div class="cardcontent">
    <img src={`/img/archive/${data.img}.webp`} alt="Label" />
    <h2 class={data.slug}>{data.name}</h2>
    <p class={`type ${data.slug}`}>{data.type}</p>
    <p class={data.slug}>{data.description}</p>
  </div>
</article>

<style>
  article {
    padding: 14px;
    max-height: 134px;
    overflow: hidden;
  }

  article.active {
    max-height: 1000px;
  }
  .cardheader {
    display: flex;
    padding: 0 20px;
    justify-content: space-between;
    align-items: center;
    z-index: 3;
  }
  .cardcontent {
    padding-top: 30px;
    padding-bottom: 60px;
  }

  .flex {
    display: flex;
    gap: 22px;
  }

  img.can {
    max-width: 40px;
  }

  h2 {
    text-align: left;
    font-style: italic;
    text-transform: lowercase;
    font-size: 27px;
    padding-bottom: 6px;
    padding-top: 70px;
  }

  h3 {
    padding: 14px 0 12px 0;
  }

  p.type {
    font-size: 27px;
    font-style: italic;
    padding-bottom: 6px;
  }

  .barbox {
    position: relative;
    width: 40px;
    height: 30px;
    cursor: pointer;
  }
  .bar {
    display: block;
    height: 4px;
    width: 26px;
    border-radius: 10px;
    position: absolute;
    transition: transform 0.3s ease-in-out;
  }
  .bar1 {
    transform: translate(-2px, 13px) rotate(45deg);
  }
  .bar2 {
    transform: translate(14px, 13px) rotate(-45deg);
  }

  /* .barbox.active .bar1 {
