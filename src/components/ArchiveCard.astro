  .barbox.active .bar1 {
    transform: translate(6px, 13px) rotate(45deg);
  }

  .barbox.active .bar2 {
    transform: translate(6px, 13px) rotate(-45deg);
  }
  .barbox .bar::before,
  .barbox .bar::after {
    transition: transform 0.2s ease-in-out;
